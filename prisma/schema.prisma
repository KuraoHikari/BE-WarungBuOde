generator client {
  provider = "prisma-client-js"
  output   = "./generated/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

enum Role {
  EMPLOYE
  ADMIN
}

model User {
   id        Int      @id @default(autoincrement())
   email     String   @unique
   username  String
   password  String  
   role      Role     @default(EMPLOYE)

   warungs   Warung[]
   warungEmployes WarungEmploye[]
   menu      Menu[]

   bills     Bill[]
}

model Warung {
   id        Int     @id @default(autoincrement())
   name      String  @unique
   location  String

   user      User    @relation(fields: [userId], references: [id])
   userId    Int

   warungEmployes WarungEmploye[]
   menu      Menu[]
}

model WarungEmploye {
   id        Int     @id @default(autoincrement())
   warung    Warung    @relation(fields: [warungId], references: [id])
   warungId  Int
   user      User    @relation(fields: [userId], references: [id])
   userId    Int
}

model Menu {
   id        Int     @id @default(autoincrement())
   title     String
   price     Int
   desc      String
   image     String
   available Boolean
   category  String

   warung    Warung    @relation(fields: [warungId], references: [id])
   warungId  Int
   user      User    @relation(fields: [userId], references: [id])
   userId    Int

   orders    Order[]
}

model Order {
   id        Int     @id @default(autoincrement())
   menu      Menu    @relation(fields: [menuId], references: [id])
   menuId    Int
   bill      Bill    @relation(fields: [billId], references: [id])
   billId    Int
   quantity  Int
   total     Int
   createdAt DateTime @default(now())
}

model Bill {
   id        Int     @id @default(autoincrement())
   user      User    @relation(fields: [userId], references: [id])
   userId    Int
   total     Int
   status    String
   approved  Boolean
   customerName String
   createdAt DateTime @default(now())
   orders    Order[]
}

