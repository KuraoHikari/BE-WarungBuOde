generator client {
  provider = "prisma-client-js"
   output   = "./generated/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

enum Role {
  EMPLOYE
  ADMIN
}

model User {
   id        Int      @id @default(autoincrement())
   email     String   @unique
   username  String
   password  String  
   role      Role     @default(EMPLOYE)

   warungs   Warung[]
   warungEmployes WarungEmploye[]
   menu      Menu[]
}

model Warung {
   id        Int     @id @default(autoincrement())
   name      String  @unique
   location  String

   user      User    @relation(fields: [userId], references: [id])
   userId    Int

   warungEmployes WarungEmploye[]
   menu      Menu[]
}

model WarungEmploye {
   id        Int     @id @default(autoincrement())
   warung    Warung    @relation(fields: [warungId], references: [id])
   warungId  Int
   user      User    @relation(fields: [userId], references: [id])
   userId    Int
}

model Menu {
   id        Int     @id @default(autoincrement())
   title     String
   price     Int
   desc      String
   image     String
   available Boolean
   category  String

   warung    Warung    @relation(fields: [warungId], references: [id])
   warungId  Int
   user      User    @relation(fields: [userId], references: [id])
   userId    Int
}